<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/month_exiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter"
        android:textSize="20sp"
        android:src="@drawable/button_exit"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_monthform"/>

    <EditText
        android:id="@+id/month_enter_month"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/month_txt"
        app:layout_constraintTop_toBottomOf="@+id/text_monthform" />

    <TextView
        android:id="@+id/month_txt"
        android:layout_width="20dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="/"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/month_enter_year"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/month_txt"
        app:layout_constraintTop_toTopOf="@+id/month_txt"
        app:layout_constraintBottom_toBottomOf="@+id/month_enter_month"/>

    <TextView
        android:id="@+id/text_monthform"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Enter the month and year in mm/yyyy"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/month_txt"/>

    <Button
        android:id="@+id/month_entering"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="enter"
        android:textSize="20sp"
        android:background="#00bfff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_enter_month"/>

</android.support.constraint.ConstraintLayout>
