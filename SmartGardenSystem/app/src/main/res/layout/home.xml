<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="InvalidId">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#39ac39"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart garden"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_view_device"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_view_device"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:id="@+id/txt_view_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View devices"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_add_device"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_add_device"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new device"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_add_plant"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_add_plant"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new plant"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_view_report"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_view_report"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View report"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_setting"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_log_out"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/button_log_out"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:paddingLeft="5dp"
            android:textSize="24sp"
            android:textColor="#39ac39"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#39ac39">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:layout_weight="7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart garden"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:textColor="#ffffff" />

    </LinearLayout>

</LinearLayout>
